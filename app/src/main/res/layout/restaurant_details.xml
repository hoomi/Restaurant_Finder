<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/v_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/content_description_restaurant_icon"/>

    <TextView
        android:id="@+id/v_address"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textIsSelectable="true"
        android:layout_toRightOf="@+id/v_icon"
        android:layout_toEndOf="@+id/v_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/v_types"
        android:textIsSelectable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_address"
        android:layout_alignLeft="@+id/v_address"
        android:layout_alignStart="@+id/v_address"/>

</RelativeLayout>